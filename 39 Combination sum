class Solution {
private:
    void solve(vector<int>& nums, int target,int i,vector<int> &path,vector<vector<int>> &ans){
        if(target==0){
            ans.push_back(path);
            return;
        }
        if(i==nums.size() || target<0) return;
        path.push_back(nums[i]);
        solve(nums,target-nums[i],i,path,ans);
        path.pop_back();
        solve(nums,target,i+1,path,ans);
    }
public:
    vector<vector<int>> combinationSum(vector<int>& nums, int target) {
        vector<int> path;
        vector<vector<int>> ans;
        solve(nums,target,0,path,ans);
        return ans;
    }
};
