class Solution {
public:
    double myPow(double x, int n) {
        long long N = n;
        if(N<0){
            x = 1/x;
            N = -N;
        }
        return helper(x,N);
    }

private:
    double helper(double x,long long n){
        if(n == 0) return 1;
        double half = helper(x,n/2);
        double sq = half *half;
        if(n%2==0){
            return sq;
        }
        else{
            return x*sq;
        }
    }
};
